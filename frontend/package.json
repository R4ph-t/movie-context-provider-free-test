{
  "name": "movie-context-provider-widgets",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:poster && npm run build:list && npm run build:preferences && npm run build:postbuild",
    "build:poster": "WIDGET_ENTRY=poster-component vite build",
    "build:list": "WIDGET_ENTRY=list-component vite build --mode list",
    "build:preferences": "WIDGET_ENTRY=preferences-component vite build --mode preferences",
    "build:postbuild": "cp static/harness.html dist/harness.html 2>/dev/null || true",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "postcss": "^8.4.32",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.9",
    "vite-plugin-glob": "^0.3.2"
  }
}
