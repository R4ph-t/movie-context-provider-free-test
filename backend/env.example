# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/movies_db

# External APIs
TMDB_API_KEY=your_tmdb_api_key_here

# LLM Provider API Keys (at least one required)
# The system will auto-detect which provider to use based on available keys
# Priority: OpenAI (GPT-5) > Anthropic (Claude Sonnet 4.5) > Gemini (2.5 Flash)
# Models are fixed - no configuration needed, just set your API key
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

MOVIE_POSTER_WIDGET_URL=https://your-static-host/component.js

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Default admin API key for initial setup
# Generate a secure random string for production
ADMIN_API_KEY=demo_admin_key_change_in_production

# Optional: Honeycomb observability for performance monitoring
# Sign up at https://honeycomb.io to get an API key
# HONEYCOMB_API_KEY=your_honeycomb_api_key_here

# Optional: Redis/Valkey for caching TMDB API responses
# Improves performance by caching person searches and movie details
# Format: redis://username:password@host:port or rediss:// for TLS
# REDIS_URL=redis://localhost:6379

